---
import ContactCTA from '../components/ContactCTA.astro';
import Hero from '../components/Hero.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import ResumeCTA from '../components/ResumeCTA.astro';

---

<BaseLayout title="About | Umesh Kumar K" description="About Umesh Kumar K's work experience">
	<div class="stack gap-20">
		<main class="wrapper about">
			<Hero
				title="About Me"
				tagline="A summary of my career highlights, expertise, and background"
			>
			</Hero>
			<img
					alt="FIS company logo"
					width="480"
					height="620"
					src="/assets/profile-uk.jpeg"
			/>

			<section>
				<h2 class="section-title">Career Highlights</h2>
				<div class="content">
					<p>
						<ul>
							<li>
								Principal Frontend / Full-Stack Architect with 18+ years of experience designing and modernizing enterprise-scale web platforms.
							</li>
							<li>
								Frontend-first full-stack leader specializing in Angular-based SPA architecture, micro frontends, frontend performance optimization, and secure UI platforms.
							</li>
							<li>
								Proven expertise in end-to-end system design, API-driven architectures, DevSecOps, CI/CD automation, and large-scale application modernization.	
							</li>
							<li>
								Known for leading complex migrations, building high-performance user experiences, and delivering secure, scalable platforms across diverse enterprise environments.
							</li>
							<li>
								Adept at modernizing legacy platforms, enabling secure-by-design UI architectures, and leading cross-functional engineering initiatives.
							</li>
							<li>
								Passionate about building maintainable, scalable systems and mentoring teams through complex technical transformations.
							</li>		
						</ul>
					</p>
				</div>
			</section>

			<section>
				<h2 class="section-title">Education</h2>
				<div class="content">
					<p>
						<ul>
							<li>
								Bachelor Of Technology in Information Technology.
							</li>
							<li>
								Graduated in 2006.
							</li>
						</ul>
					</p>
				</div>
			</section>

			<section>
				<h2 class="section-title">Location & Availability</h2>
				<div class="content">
					<p>
						<ul>
							<li>
								Bangalore, India (IST timezone).
							</li>
							<li>
								Open to Remote.
							</li>
						</ul>
					</p>
				</div>
			</section>

		</main>

		<ResumeCTA />
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.about {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	img {
		margin-top: 1.5rem;
		border-radius: 50%;
		width: 160px;
		height: 160px;
		object-fit: cover;
		box-shadow: var(--shadow-md);
	}

	section {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		grid-column-start: 1;
		font-size: var(--text-xl);
		color: var(--gray-0);
	}

	.content {
		grid-column: 2 / 4;
	}

	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 50em) {
		.about {
			display: grid;
			grid-template-columns: 1fr 60% 1fr;
		}

		.about > :global(:first-child) {
			grid-column-start: 2;
		}

		section {
			display: contents;
			font-size: var(--text-lg);
		}
	}
</style>

